@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-regular.woff') format('woff')
  font-weight normal
  font-style normal

@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-medium.woff') format('woff')
  font-weight bold
  font-style normal

// https://s3.amazonaws.com/design.heroku/logos/heroku-logo-purple.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-logo-white.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-mark-purple.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-mark-white.svg

g1 = rgba(69,61,128,1)
g2 = rgba(99,64,140,1)
backgroundColor = rgba(#6762A6, 0.4)
appBackgroundColor = #FFF
headingColor = #FFF
textColor = #666
appHeadingColor = #333
buttonColor = g2
linkColor = g1

desktopWidth = 1000px
appCardWidth = 280px
appLogoWidth = 200px
appCardWidthSingle = 480px
appLogoWidthSingle = 400px

// Layout
//---------------------------------------------------------

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family benton, "helvetica neue", helvetica, arial
  margin 0
  padding 0
  color textColor

  // background rgb(69,61,128)
  // background -moz-linear-gradient(top,  g1 0%,  g2 100%)
  // background -webkit-gradient(linear, left top, left bottom, color-stop(0%,g1), color-stop(100%, g2))
  // background -webkit-linear-gradient(top,  g1 0%, g2 100%)
  // background -o-linear-gradient(top,  g1 0%, g2 100%)
  // background -ms-linear-gradient(top,  g1 0%, g2 100%)
  // background linear-gradient(to bottom,  g1 0%, g2 100%)
  background #603F8B

section
  position relative

header
  float none
  overflow hidden
  // background black
  padding 30px 40px 0 40px

  h1
    float left
    font-weight normal
    font-size 22px
    color headingColor
    line-height 1
    margin 0
    padding 0
    a
      color headingColor
      span
        opacity 0.6

    // display inline-block
  ul
    list-style none
    // display inline-block
    float right
    margin 0
    padding 0
    > li
      a
        color headingColor

ul#apps
  display block
  float none
  margin 20px
  padding 0

  &.single
    // position relative
    // margin auto 0
    -webkit-transform translateX(-50%)
    -moz-transform translateX(-50%)
    transform translateX(-50%)
    transition all 0.3s
    position absolute
    top 40px
    left 50%


  > li
    background #EEE
    max-width appCardWidth
    float left
    margin 20px
    position relative
    border-radius 5px
    list-style none
    -webkit-box-shadow 0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    transition all 0.3s

    &.active
      -webkit-box-shadow 0px 2px 20px 10px rgba(50, 50, 50, 0.5)
      -moz-box-shadow    0px 2px 20px 10px rgba(50, 50, 50, 0.5)
      box-shadow         0px 2px 20px 10px rgba(50, 50, 50, 0.5)

    a.logo
      cursor pointer
      display block
      position relative
      width appCardWidth
      height appCardWidth
      background appBackgroundColor
      border-radius 5px
      border-bottom 1px solid #CCC

    img
      max-width appLogoWidth
      max-height appLogoWidth
      position relative
      top 50%
      left 50%
      -webkit-transform translate(-50%, -50%)
      transform translate(-50%, -50%)
      overflow hidden

    div.meta
      padding 0 15px

    h2
      font-size 16px
      font-weight bold
      color appHeadingColor
      a
        color appHeadingColor
        text-decoration none

        display block
        width appLogoWidth
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        // display none

    div.drawer
      // background green
      transition all 0.3s
      max-height 0
      overflow hidden
      margin-bottom 0

    &.active
      div.drawer
        max-height 1000px
        margin-bottom 15px

    p
      padding 0
      font-weight normal
      font-size 14px
      opacity 0.9
      line-height 1.4
      a
        color linkColor

    form
      padding 0
      input
        outline none
        border none
        width 100%
        text-align center
        background #999
        color white
        display inline-block
        position relative
        -webkit-border-radius 2px
        -moz-border-radius 2px
        border-radius 5px
        font-size 14px
        font-weight normal
        line-height 2.5
        cursor pointer
        transition 0.3s all
        &:hover
          background buttonColor

ul#apps.single

  > li
    max-width appCardWidthSingle

  a.logo
    width appCardWidthSingle
    height appCardWidthSingle
  img
    max-width appLogoWidthSingle
    max-height appLogoWidthSingle

a
  color textColor
  text-decoration none
