@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-regular.woff') format('woff')
  font-weight normal
  font-style normal

@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-medium.woff') format('woff')
  font-weight bold
  font-style normal

column-count(n)
  -webkit-column-count n
  -moz-column-count n
  column-count n

column-gap(n)
  -webkit-column-gap n
  -moz-column-gap n
  column-gap n

column-fill(n)
  -webkit-column-fill n
  -moz-column-fill n
  column-fill n

column-break-inside(n)
  -webkit-column-break-inside n
  -moz-column-break-inside n
  column-break-inside n

transform(n)
  -webkit-transform n
  -moz-transform n
  transform n

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

g1 = rgba(69,61,128,1)
g2 = rgba(99,64,140,1)
backgroundColor = rgba(#6762A6, 0.4)
appBackgroundColor = #FFF
headingColor = #FFF
textColor = #666
appHeadingColor = #333
buttonColor = g2
linkColor = g1

