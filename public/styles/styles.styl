// Layout
//---------------------------------------------------------

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family benton, "helvetica neue", helvetica, arial
  margin 0
  padding 0
  color textColor
  background #603F8B

section
  position relative

ul#apps
  margin 20px 20px
  padding 0
  list-style none
  column-count 2
  column-gap 5px
  column-fill auto

  a.repository, a.website
    display none

  &.single
    transform translateX(-50%)
    transition all 0.3s
    position absolute
    top 40px
    left 50%
    column-count 1
    column-gap 5px
    column-fill auto

  > li
    // column-width 300px
    max-width 300px
    display inline-block
    column-break-inside avoid
    background #EEE
    margin 20px
    border-radius 5px
    list-style none
    -webkit-box-shadow 0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    transition all 0.3s

    &.active
      -webkit-box-shadow 0px 2px 20px 10px rgba(50, 50, 50, 0.5)
      -moz-box-shadow    0px 2px 20px 10px rgba(50, 50, 50, 0.5)
      box-shadow         0px 2px 20px 10px rgba(50, 50, 50, 0.5)

    a.logo
      cursor pointer
      display block
      position relative
      width 100%
      height: 300px
      background appBackgroundColor
      // background black
      border-radius 5px
      border-bottom 1px solid #CCC

    img
      max-width 80%
      max-height 80%
      position relative
      top 50%
      left 50%
      -webkit-transform translate(-50%, -50%)
      transform translate(-50%, -50%)
      overflow hidden

    div.meta
      padding 0 15px

    h2
      font-size 16px
      font-weight bold
      color appHeadingColor
      a
        color appHeadingColor
        text-decoration none
        display block
        // width appLogoWidth
        text-overflow ellipsis
        overflow hidden
        white-space nowrap

    div.drawer
      transition all 0.3s
      overflow hidden
      margin-bottom 0
      // margin-bottom 15px
      max-height 0

    &.active
      div.drawer
        max-height 1000px
        margin-bottom 15px

    p
      padding 0
      font-weight normal
      font-size 14px
      opacity 0.9
      line-height 1.4
      a
        color linkColor

    form
      // display none
      padding 0
      input
        outline none
        border none
        width 100%
        text-align center
        background #999
        color white
        display inline-block
        position relative
        border-radius 2px
        font-size 14px
        font-weight normal
        line-height 2.5
        cursor pointer
        transition 0.3s all
        &:hover
          background buttonColor

ul#apps.single
  > li
    max-width appCardWidthSingle
  a.logo
    width appCardWidthSingle
    height appCardWidthSingle
  img
    max-width appLogoWidthSingle
    max-height appLogoWidthSingle

@media (min-width: 840px)
  ul#apps
    column-count: 3

@media (min-width: 1120px)
  ul#apps
    column-count: 4

@media (min-width: 1400px)
  ul#apps
    column-count: 5

header
  float none
  overflow hidden
  padding 30px 40px 0 40px

  h1
    float left
    font-weight normal
    font-size 22px
    color headingColor
    line-height 1
    margin 0
    padding 0
    a
      color headingColor
      span
        opacity 0.6

  ul
    list-style none
    float right
    margin 0
    padding 0
    > li
      a
        color headingColor

a
  color textColor
  text-decoration none
