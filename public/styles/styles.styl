@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-regular.woff') format('woff')
  font-weight normal
  font-style normal

@font-face
  font-family 'benton'
  src url('https://s3.amazonaws.com/design.heroku/fonts/bentonsans-medium.woff') format('woff')
  font-weight bold
  font-style normal

// https://s3.amazonaws.com/design.heroku/logos/heroku-logo-purple.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-logo-white.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-mark-purple.svg
// https://s3.amazonaws.com/design.heroku/logos/heroku-mark-white.svg

backgroundColor = #CCC
// textColor = #53397C
textColor = #666
appBackgroundColor = #FFF

// Layout
//---------------------------------------------------------

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family benton, "helvetica neue", helvetica, arial
  margin 0
  padding 0
  color textColor
  background backgroundColor

ul#apps
  display block
  float none
  margin 60px 0 60px 0
  padding 0

  > li
    background #EEE
    max-width 280px
    float left
    margin 20px
    position relative
    border-radius 5px
    list-style none
    -webkit-box-shadow 0px 3px 6px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 3px 6px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 3px 6px 0px rgba(50, 50, 50, 0.5)

    a.logo
      display block
      position relative
      width 280px
      height 280px
      background appBackgroundColor
      border-radius 5px
      border-bottom 1px solid #CCC

    img
      max-width 200px
      max-height 200px
      position relative
      top 50%
      left 50%
      -webkit-transform translate(-50%, -50%)
      transform translate(-50%, -50%)
      overflow hidden

    h2
      // text-align center
      font-size 18px
      padding 0 20px
      font-weight bold

    p
      padding 0 20px
      font-weight normal
      font-size 14px
      opacity 0.8
      line-height 1.4


a
  color textColor
