  // background black

ul#apps
  display block
  float none
  margin 20px
  padding 0

  > li
    background #EEE
    max-width 280px
    float left
    margin 20px
    position relative
    border-radius 5px
    list-style none
    -webkit-box-shadow 0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 2px 4px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 2px 4px 0px rgba(50, 50, 50, 0.5)

    a.logo
      display block
      position relative
      width 280px
      height 280px
      background appBackgroundColor
      border-radius 5px
      border-bottom 1px solid #CCC

    img
      max-width 200px
      max-height 200px
      position relative
      top 50%
      left 50%
      -webkit-transform translate(-50%, -50%)
      transform translate(-50%, -50%)
      overflow hidden

    h2
      // text-align center
      font-size 18px
      padding 0 20px
      font-weight bold
      color headingColor
      a
        color headingColor

    p
      padding 0 20px
      font-weight normal
      font-size 14px
      opacity 0.9
      line-height 1.4

    form
      padding 0 20px
      input
        outline none
        border none
        background buttonColor
        color white
        display inline-block
        position relative
        -webkit-border-radius 2px
        -moz-border-radius 2px
        border-radius 5px
        font-size 12px
        font-weight normal
        line-height 2em
        /* letter-spacing 0.05em */
        padding 3px 8px
