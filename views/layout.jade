doctype html
html
  head
    title= title

    meta(name="viewport" content="width=device-width, initial-scale=1")

    //- Stylesheets
    link(href="styles/styles.css", rel="stylesheet")

    //- Javascripts
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/ICanHaz.js/0.10.3/ICanHaz.min.js")
    script(src="scripts/vendor/app.js")
    script(src="scripts/index.js")

    block head

  body

    header
      h1
        a(href="/")
          | Heroku&nbsp;
          span Clone
      ul
        li
          a(href="/auth/heroku/logout") Log out

    section
      block content


script#app(type="text/html")

  li.app

    a.logo.activator
      img(src="{{logo}}")

    div.meta
      h2
        a.activator {{name}}

      div.drawer

        p {{description}}

        form.deploy
          input(type="hidden" name="source" value="{{repository}}")
          input(type="submit" value="Deploy")

        div.output

script#buildSuccess(type="text/html")

  p
    | Your app is deploying to &nbsp;
    a(href="https://{{app.name}}.herokuapp.com"){{app.name}}.herokuapp.com
    | , and will be ready soon.
